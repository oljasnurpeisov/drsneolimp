{% set page = 'trainers' %}
{% extends "layouts/default.njk" %}

{% block content %}
    <main class="main main--trainers">
        <div class="container">
            <ul class="crumbs">
                <li>
                    <a href="">Главная</a>
                </li>
                <li>
                    <a href="">Тренерский состав</a>
                </li>
            </ul>

            <section>
                <h1 class="h1">Тренерский состав</h1>

                <nav class="mb-29px">
                    <div class="nav nav-tabs" role="tablist">
                        <a class="nav-item nav-link active" id="nav-trainers-list-tab" data-toggle="tab" href="#nav-trainers-list" role="tab" aria-controls="nav-trainers-list" aria-selected="true">Списком</a>
                        <a class="nav-item nav-link" id="nav-trainers-map-tab" data-toggle="tab" href="#nav-trainers-map" role="tab" aria-controls="nav-trainers-map" aria-selected="false">На карте</a>
                    </div>
                </nav>
                    
                <div class="input-block input-block--with-select mb-30px">
                    <div class="c-select text-normal">
                        <select name="sport-kinds-select" id="select-1">
                            <option value="0">Все виды спорта</option>
                            <option value="1">Вид 2</option>
                            <option value="2">Вид 3</option>
                            <option value="3">Вид 4</option>
                        </select>
                    </div>
                    <input type="text" placeholder="Поиск">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19.3359 18.2109L14.7344 13.6094C15.875 12.2188 16.5625 10.4375 16.5625 8.49609C16.5625 4.04297 12.9492 0.429688 8.49609 0.429688C4.03906 0.429688 0.429688 4.04297 0.429688 8.49609C0.429688 12.9492 4.03906 16.5625 8.49609 16.5625C10.4375 16.5625 12.2148 15.8789 13.6055 14.7383L18.207 19.3359C18.5195 19.6484 19.0234 19.6484 19.3359 19.3359C19.6484 19.0273 19.6484 18.5195 19.3359 18.2109ZM8.49609 14.957C4.92969 14.957 2.03125 12.0586 2.03125 8.49609C2.03125 4.93359 4.92969 2.03125 8.49609 2.03125C12.0586 2.03125 14.9609 4.93359 14.9609 8.49609C14.9609 12.0586 12.0586 14.957 8.49609 14.957Z" fill="#0068DE"/>
                    </svg>
                </div>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nav-trainers-list" role="tabpanel" aria-labelledby="nav-trainers-list-tab">
                        <div class="row">
                            {% for i in range(12) %}
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-26px mb-sm-16px">
                                    <figure class="trainer-card swiper-slide {{'active' if i==2 }}" data-toggle="modal" data-target="#modal--trainer">
                                        <div class="trainer-card__header">
                                            <div class="trainer-card__icon">
                                                <img src="images/img.png" alt="icon">
                                            </div>
                                            Старший тренер
                                        </div>
                                        <p class="font-bold mb-9px">Абдахин Серик Нургалиевич</p>
                                        <p class="text-normal">#Гиревой спорт</p>
                                        <div class="bullets mt-12px">
                                            <div class="bullet">ЗТРК</div>
                                            <div class="bullet">ЗТРК</div>
                                        </div>
                                    </figure>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="d-flex flex-jcc mt-12px">
                            <button class="btn btn--secondary">Показать еще</button>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="nav-trainers-map" role="tabpanel" aria-labelledby="nav-trainers-map-tab">
                        <div id="yandex-map-trainers"></div>
                    </div>
                </div>

            </section>
        </div>
    </main>
{% endblock %}