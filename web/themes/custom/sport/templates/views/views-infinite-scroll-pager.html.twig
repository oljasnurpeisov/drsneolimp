{% if items.next %}
<ul{{ attributes.addClass('d-flex flex-jcc mt-27px') }}>
  <li class="pager__item">
    <a class="button" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"><button class="btn btn--secondary">{{ options.button_text }}</button></a>
  </li>
</ul>
{% endif %}
