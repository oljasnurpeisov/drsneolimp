{#
/**
 * @file
 * Default theme implementation for a select element.
 *
 * Available variables:
 * - attributes: HTML attributes for the <select> tag.
 * - options: The <option> element children.
 *
 * @see template_preprocess_select()
 *
 * @ingroup themeable
 */
#}

{% apply spaceless %}
  <div{{ attributes.addClass('swiper-block') }}>
    <div class="swiper--nav">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for option in options %}
            <div class="swiper-slide {{ get.field_sport_kinds_target_id  == option.value ? "active" }} ">
            <span class="clear-link">#<a href="?field_sport_kinds_target_id={{ option.value }}" hreflang="ru">{{ option.label }}</a></span>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="swiper-btn swiper-btn-next">
        <svg width="6" height="12" viewBox="0 0 6 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.676329 11.8759C0.599034 11.9586 0.502416 12 0.396135 12C0.289855 12 0.193237 11.9586 0.115942 11.8759C-0.0386473 11.7103 -0.0386473 11.4414 0.115942 11.2759L5.04348 6L0.115942 0.724138C-0.0386473 0.558621 -0.0386473 0.289655 0.115942 0.124138C0.270531 -0.0413793 0.521739 -0.0413793 0.676329 0.124138L5.88406 5.7C6.03865 5.86552 6.03865 6.13448 5.88406 6.3L0.676329 11.8759Z"
            fill="#557BBC" /> </svg>
      </div>
    </div>
  </div>
{% endapply %}
